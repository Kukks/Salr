@inject Db _db
@if (_db.NIP4Authors.Any())
{
    
<MudList Clickable="true">
    <MudListItem Text="Direct Messages" InitiallyExpanded="true" Dense="true" Class="mt-4">
        <NestedList>
            @foreach (var item in _db.NIP4Authors)
            {
                var text = (item == _db.PubKeyHex) ? "Myself" : item;
                <MudListItem Dense="true" Href="@($"/dms/{item}")">
                    @text
                </MudListItem>
            }

        </NestedList>
    </MudListItem>
</MudList>

}