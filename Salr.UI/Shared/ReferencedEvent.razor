@using Salr.UI.Pages
<MudPaper Outlined="true" Square="false">
    @{
        var content = Db.GetContent(Event, out var taggedNostrEvent);

    }
    <MudText>@content</MudText>
    @if (taggedNostrEvent?.Kind == 1)
    {
        <MudIconButton Icon="@Icons.Filled.OpenInNew" Link="@ViewThread.PageLinks.ThreadLink(Event)"></MudIconButton>
    }
    @if (AllowClear)
    {
        <MudIconButton Icon="@Icons.Filled.Clear" OnClick="OnClear"></MudIconButton>
    }
</MudPaper>

@code{

    [Inject]
    public Db Db { get; set; }

    [Parameter]
    public string Event { get; set; }

    [Parameter]
    public bool AllowClear { get; set; }

    [Parameter]
    public EventCallback OnClear { get; set; }

}